@model List<AhorcadoMVC.Models.Usuario>

@{
    ViewBag.Title = "Usuarios";
}

<h2>Usuarios Registrados</h2>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Nombre</th>
            <th>Email</th>
            <th>Rol</th>
            <th>Puntaje más alto</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var usuario in Model)
        {
            <tr>
                <td>@usuario.Nombre</td>
                <td>@usuario.Email</td>
                <td>@usuario.Rol</td>
                <td>@usuario.HighestScore</td>
            </tr>
        }
    </tbody>
</table>
